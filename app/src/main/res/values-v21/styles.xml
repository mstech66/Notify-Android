<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.Base" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
        <item name="android:fontFamily">@font/productsans</item>
        <item name="materialButtonStyle">@style/Button.Light</item>
        <item name="materialCardViewStyle">@style/CardView.Light</item>
        <item name="chipStyle">@style/Chip.Light</item>
    </style>
    <style name="AppTheme.Dark" parent="AppTheme.Base">
        <item name="colorPrimary">#424242</item>
        <item name="colorPrimaryDark">#424242</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColor">#fafafa</item>
        <item name="android:textColorSecondary">#f1f1f1</item>
        <item name="android:textColorPrimary">@color/darkMode</item>
        <item name="materialButtonStyle">@style/Button.Dark</item>
        <item name="materialCardViewStyle">@style/CardView.Dark</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogThemeDark</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
        <item name="chipStyle">@style/Chip.Dark</item>
    </style>
    <style name="Button.Dark" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:backgroundTint">#424242</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="LoginButton.Dark" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="Button.Light" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="BottomSheetDialogThemeDark"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyleDark</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>
    <style name="Chip.Light" parent="Base.Widget.MaterialComponents.Chip">
        <item name="chipBackgroundColor">#f1f1f1</item>
        <item name="closeIconTint">#424242</item>
    </style>
    <style name="Chip.Dark" parent="Base.Widget.MaterialComponents.Chip">
        <item name="chipBackgroundColor">#424242</item>
        <item name="closeIconTint">#f1f1f1</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#f1f1f1</item>
    </style>

    <style name="AppCompatStyle" parent="Theme.AppCompat.Light"/>

    <style name="BottomSheetStyleDark"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog_dark</item>
    </style>
</resources>